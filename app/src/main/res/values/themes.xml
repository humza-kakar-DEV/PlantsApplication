<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlantsServiceFyp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    custom floating action button styles    -->
    <style name="myCustomFloatingActionButton">
        <item name="iconTint">@color/white</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <!--    bottom navigation font change style     -->
    <style name="BottomNavigationView">
        <item name="fontFamily">@font/poppinsregular</item>
    </style>

    <!--    chips with single selection style   -->
    <style name="my.custom.chip.style" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_choice_background_color</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/poppinsregular</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>

</resources>